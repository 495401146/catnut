<resources>

	<style name="AppTheme" parent="android:Theme.Holo">

	</style>

	<style name="AppTheme.Light" parent="android:Theme.Holo.Light">
		<item name="android:windowBackground">@android:color/white</item>
		<item name="android:actionBarStyle">@style/ActionBar_Light</item>
		<item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle_Light</item>
		<item name="android:selectableItemBackground">@drawable/item_background_holo_light</item>
		<item name="android:actionBarTabStyle">@style/ActionBar_Light_TabStyle</item>
		<item name="android:actionBarTabBarStyle">@style/ActionBar_Light_TabBarStyle</item>
		<item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
		<item name="android:buttonStyle">@style/RobotoButtonStyle</item>
	</style>

	<style name="AppTheme.Dark" parent="android:Theme.Holo">

	</style>

	<!--
	***********************
	light theme goes first!
	***********************
	-->
	<style name="OverflowButtonStyle_Light" parent="android:Widget.Holo.Light.ActionButton.Overflow">
		<item name="android:src">@drawable/ic_title_overflow_default</item>
	</style>

	<style name="ActionBar_Light" parent="android:Widget.Holo.ActionBar">
		<item name="android:background">@color/actionbar_background</item>
		<item name="android:titleTextStyle">@style/ActionBar_Light_TextStyle</item>
	</style>

	<style name="ActionBar_Light_TextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="ActionBar_Light_TabStyle" parent="android:Widget.Holo.Light.ActionBar.TabView">
		<item name="android:background">@drawable/bg_actionbar</item>
		<item name="android:paddingLeft">0dp</item>
		<item name="android:paddingRight">0dp</item>
	</style>

	<style name="ActionBar_Light_TabBarStyle" parent="android:Widget.Holo.Light.ActionBar.TabBar">
		<item name="android:background">@drawable/bg_actionbar</item>
	</style>

	<!-- Roboto font -->
	<style name="RobotoTextViewStyle" parent="android:Widget.TextView">
		<item name="android:fontFamily">sans-serif-light</item>
	</style>

	<style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
		<item name="android:fontFamily">sans-serif-light</item>
	</style>

	<!--
	***********************
	below is dark theme!
	***********************
	-->

</resources>