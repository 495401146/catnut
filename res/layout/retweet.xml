<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:padding="@dimen/medium"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/screen_name"
			android:textColor="@android:color/primary_text_light"
			android:textStyle="bold|italic"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<TextView
			android:id="@+id/text"
			android:layout_alignTop="@id/screen_name"
			android:textColor="@android:color/secondary_text_light"
			android:layout_marginLeft="@dimen/small"
			android:maxLines="3"
			android:ellipsize="end"
			android:layout_toRightOf="@id/screen_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:id="@+id/text_counter"
			android:text="140"
			android:layout_marginTop="@dimen/small"
			android:textColor="@android:color/holo_green_light"
			android:layout_below="@id/text"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<EditText
			android:id="@+id/retweet_text"
			android:layout_below="@id/text_counter"
			android:layout_marginTop="@dimen/small"
			android:hint="@string/retweet"
			android:textColor="@android:color/primary_text_light"
			android:maxLength="140"
			android:maxLines="3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:id="@+id/place_holder"
			android:layout_below="@id/retweet_text"
			android:layout_alignTop="@+id/retweet_options"
			android:layout_alignBottom="@id/retweet_options"
			android:gravity="center_vertical"
			android:text="@string/retweet_option_hint"
			android:textColor="@android:color/secondary_text_light"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<!--这里的index的值和api上的一样的哟-->
		<Spinner
			android:id="@id/retweet_options"
			android:layout_marginTop="@dimen/medium"
			android:layout_below="@id/retweet_text"
			android:layout_toRightOf="@id/place_holder"
			android:layout_marginLeft="@dimen/small"
			android:entries="@array/reteet_options"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<!--todo: may be emotions goes here!-->
	</RelativeLayout>
</ScrollView>