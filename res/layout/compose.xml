<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:padding="@dimen/medium"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:layout_margin="@dimen/medium"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@id/avatar"
			android:layout_width="50dp"
			android:layout_height="50dp" />

		<TextView
			android:id="@+id/screen_name"
			android:layout_alignTop="@id/avatar"
			android:layout_alignBottom="@id/avatar"
			android:layout_toRightOf="@id/avatar"
			android:layout_marginLeft="@dimen/medium"
			android:textColor="@android:color/primary_text_light"
			android:textStyle="bold"
			android:singleLine="true"
			android:ellipsize="end"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:gravity="center_vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:id="@+id/text_counter"
			android:text="140"
			android:layout_alignTop="@id/screen_name"
			android:textColor="@android:color/holo_green_light"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</RelativeLayout>

	<EditText
		android:id="@+id/text"
		android:gravity="left|top"
		android:maxLength="140"
		android:padding="@dimen/medium"
		android:textColor="@android:color/primary_text_light"
		android:layout_weight="1"
		android:hint="@string/new_tweet_hint"
		android:layout_width="match_parent"
		android:layout_height="0dp" />

	<LinearLayout
		android:background="@drawable/overflow_dropdown_light"
		android:orientation="horizontal"
		android:showDividers="middle"
		android:divider="?android:dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/action_gallery"
			android:clickable="true"
			android:focusable="true"
			android:background="?android:attr/selectableItemBackground"
			android:src="@drawable/btn_gallery"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content" />

		<ImageView
			android:id="@+id/action_camera"
			android:clickable="true"
			android:focusable="true"
			android:background="?android:attr/selectableItemBackground"
			android:src="@drawable/btn_camera"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content" />

		<ImageView
			android:id="@+id/action_geo"
			android:clickable="true"
			android:focusable="true"
			android:background="?android:attr/selectableItemBackground"
			android:src="@drawable/btn_geo"
			android:layout_weight="1"
			android:layout_width="0dp"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>