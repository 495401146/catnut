<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
	<item android:state_focused="true"  android:state_enabled="false" android:state_pressed="true" android:drawable="@drawable/btn_title_icon_pressed" />
	<item android:state_focused="true"  android:state_enabled="false"                              android:drawable="@drawable/btn_title_icon_focused" />
	<item android:state_focused="true"                                android:state_pressed="true" android:drawable="@drawable/btn_title_icon_pressed" />
	<item android:state_focused="false"                               android:state_pressed="true" android:drawable="@drawable/btn_title_icon_pressed" />
	<item android:state_focused="true"                                                             android:drawable="@drawable/btn_title_icon_focused" />
	<item                                                                                          android:drawable="@android:color/transparent" />
</selector>
